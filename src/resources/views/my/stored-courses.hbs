<div class="container">
   <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ten khoa hoc</th>
                <th scope="col">image</th>
                <th scope="col">Description</th>
            </tr>
        </thead>

        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td><img src="{{this.image}}" width="50" alt=""></td>
                <td>{{this.description}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div> 